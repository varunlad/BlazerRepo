@page "/DeleteEmp/{CurretnID}"
@using System
@using BlazerServerAppRepo.Data
@inject EmployeeServices objCustomerService
@inject NavigationManager NavigationManager
<h2>Delete Employee</h2>
<hr />
<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-md-8">
        <div class="form-group">
            <label>Employee ID:</label>
            <label>@objCI.EmployeeId</label>
        </div>
        <div class="form-group">
            <label>Name:</label>
            <label>@objCI.Name</label>
        </div>
        <div class="form-group">
            <label>Gender:</label>
            <label>@objCI.ProfileImage</label>
        </div>
        <div class="form-group">
            <label>Country:</label>
            <label>@objCI.Gender</label>
        </div>
        <div class="form-group">
            <label>City:</label>
            <label>@objCI.Department</label>
        </div>
        <div class="form-group">
            <label>City:</label>
            <label>@objCI.Salary</label>
        </div>
        <div class="form-group">
            <label>City:</label>
            <label>@objCI.StartDate</label>
        </div>
        <div class="form-group">
            <label>City:</label>
            <label>@objCI.Notes</label>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <input type="button" @onclick="@Delete" class="btn btn-primary" value="Delete" />
            <input type="button" @onclick="@Cancel" class="btn btn-primary" value="Cancel" />
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string CurretnID { get; set; }
    EmployeeModel objCI = new EmployeeModel();

    protected override async Task OnInitializedAsync()
    {
        objCI = objCustomerService.GetEmployeeData(Convert.ToInt32(CurretnID));
    }
    protected void Delete()
    {
        objCustomerService.DeleteEmployee(objCI);
        NavigationManager.NavigateTo("EmpHome");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("EmpHome");
    }
}   